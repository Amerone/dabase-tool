{
  "$schema": "https://schema.tauri.app/config/1",
  "package": {
    "productName": "DM8 Export Tool",
    "version": "0.1.0"
  },
  "build": {
    "beforeDevCommand": "cd ../frontend && npm run dev -- --host --port 5173",
    "beforeBuildCommand": "cd ../frontend && npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../frontend/dist"
  },
  "tauri": {
    "bundle": {
      "identifier": "com.dm8.export",
      "targets": [
        "appimage",
        "nsis"
      ],
      "resources": [
        "../drivers/dm8"
      ]
    },
    "windows": {
      "allowlist": {
        "all": true
      }
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; connect-src 'self' http://localhost:* http://127.0.0.1:*; img-src 'self' data: blob:; style-src 'self' 'unsafe-inline';"
    }
  }
}
